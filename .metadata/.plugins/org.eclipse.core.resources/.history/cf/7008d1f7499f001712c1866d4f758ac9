/**
 * 图片拷贝
 */
package com.test4;
import java.io.*;
public class Demo11_4 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
// 	因为是二进制文件，所以只能用字节流
		File f = new File("/home/min/图片/1.gif");
		FileInputStream flr = null;
		File f1 = new File("/home/min/图片/4.gif");
		FileOutputStream flw = null;
		try {
			flr = new FileInputStream(f);
			flw = new FileOutputStream(f1);
			byte[] bytes = new byte[1024];
			while(flr.read(bytes) != -1)
			{
				flw.write(bytes);
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
